---
import Layout from '../layouts/Layout.astro';
import Calendar from '../components/Calendar.astro';
import Navigation from '../components/Navigation.astro';
import { getCurrentYear } from '../utils/dateUtils';

const currentYear = getCurrentYear();
---

<Layout title="Lietuvos švenčių kalendorius">
  <Navigation currentPage="home" />
  <main class="bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <h1 class="text-4xl font-bold text-center text-gray-900 mb-4">Lietuvos švenčių kalendorius</h1>
      <p class="text-xl text-center text-gray-600 mb-8">Peržiūrėkite optimalų Lietuvos švenčių kalendorių. Dabartiniai metai: {currentYear}</p>
      <Calendar year={currentYear} />
    </div>
  </main>
</Layout>